# GoCognigo Environment Configuration
# Copy this file to .env and fill in your API keys

# Default LLM provider: openai, anthropic, or huggingface
LLM_PROVIDER=openai

# API Keys (at least one LLM key required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Embedding provider: openai or huggingface
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=

# Server port (default: 8080)
PORT=8080

# OCR provider for scanned PDFs: tesseract, sarvam, or leave empty
OCR_PROVIDER=
SARVAM_API_KEY=
